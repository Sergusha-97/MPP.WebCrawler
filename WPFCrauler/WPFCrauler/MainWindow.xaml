<Window x:Class="WPFCrauler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCrauler"
        xmlns:crawlerlib="clr-namespace:CraulerLib;assembly=CraulerLib"
        mc:Ignorable="d"
        Title="WebCrawler" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Model.ResultUrlTree, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Grid.Column="0" Grid.Row="0" />
        <Button Grid.Column="0" Grid.Row="1" Content="Run" Width="100" Height="40" Command="{Binding DoCommand}"/>
        <TreeView Grid.Column="0" Grid.Row="2" ItemsSource="{Binding Model.ResultUrl, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type crawlerlib:CrawlResult}" ItemsSource="{Binding Childs}">
                    <TextBlock Text="{Binding Url}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
